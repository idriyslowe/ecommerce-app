

<div class="row">

    <div class="col-md-3">
      <div class="well">
        <h3><%= @product.id %></h3>
        <img src="<%= product.image %>" alt="">
        <p><%= @product.description %></p>
        <h3>$<%= @product.price %></h3>
        <p>Inventory: <%= @product.inventory %></p>
        <p>Product id: <%= @product.id %></p>
        <p>Created on: <%= @product.readable_created_at %></p>
      </div>
    </div>
</div>

<div>
  <%= link_to "Edit", "/products/#{@product.id}/edit" %>
</div>

