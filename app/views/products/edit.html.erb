<h2>Update a product</h2>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">

  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: "form-control", placeholder: "..." %>
  </div>

  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control", placeholder: "..." %>
  </div>

  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: "form-control", placeholder: "url" %>
  </div>

  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control", placeholder: "..." %>
  </div>

   <div class="form-group">
    <%= label_tag :inventory %>
    <%= text_field_tag :inventory, @product.inventory, class: "form-control", placeholder: "..." %>
  </div>

  <div>
    <%= button_tag 'Send' %>
  </div>

  </div>
<% end %>