<h1>Peruse all of our products!</h1>



<div class="row">
  <% @product.each do |product| %>
    <div class="col-md-3">
      <div class="well">
        <h2><%= link_to product.name, "/products/#{product.id}" %></h2>
        <h3><%= product.name %></h3>
        <p>Created on: <%= product.readable_created_at %></p>
        <h4><%= product.description %></h4>
        <p>$<%= product.price %></p>
        <p>Recipe id: <%= product.id %></p>
        <img src="<%= product.image %>" alt="">
      </div>
    </div>
  <% end %>
</div>
