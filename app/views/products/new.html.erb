<h2>Create a product</h2>
<div>
  <h3><%= pluralize(@product.error.count, "error") %> prohibited this item from being saved.</h3>
  <ul>
    <% @product.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>

<%= form_tag '/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: "form-control", placeholder: "..." %>
  </div>

    <div class="form-group">
    <%= label_tag :price %>
  <%= text_field_tag :price, @product.price, class: "form-control", placeholder: "..." %>
  </div>

  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: "form-control", placeholder: "url" %>
  </div>

  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control", placeholder: "..." %>
  </div>
  <div>
    <%= button_tag 'Send' %>
  </div>
<% end %>

